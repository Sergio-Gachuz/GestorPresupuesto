<div class="section__login">
    <div class="section__imagen">
        <img src="/img/logo.png" alt="Logo" width="300px" height="300px">
    </div>
    <div class="section__form">
        <form action="/signin" method="POST">
            {{> alerta }} 
            <div class="form-group">
                <label for="nombre">Usuario</label>
                <input class="" type="text" name="usuario" autocomplete="off">
            </div>
            <div class="form-group">
                <label for="nombre">Contraseña</label>
                <input type="password" name="contrasena" autocomplete="off">
            </div>
            <div class="form-group">
                <button class="boton azul">Iniciar Sesión</button>
            </div>
            <p class="form__link"><a href="/signup">Registrarse</a></p>
        </form>
    </div>
</div>