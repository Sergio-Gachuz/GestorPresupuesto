<div class="section__login">
    <div class="section__imagen">
        <img src="/img/logo.png" alt="Logo" width="300px" height="300px">
    </div>
    <div class="section__form">
        <form action="/signup" method="POST">
        <p>Llene el siguiente formulario</p>
            <div class="form-group">
                <label for="nombre_completo">Nombre</label>
                <input type="text" name="nombre_completo" autofocus autocomplete="off">
            </div>
            <div class="form-group">
                <label for="usuario">Usuario</label>
                <input type="text" name="usuario" autocomplete="off">
            </div>
            <div class="form-group">
                <label for="contrasena">Contraseña</label>
                <input type="password" name="contrasena" autocomplete="off">
            </div>
            <div class="form-group">
                <label for="codigo_verificacion">Código de Verificación</label>
                <input type="text" name="codigo_verificacion" autocomplete="off">
            </div>
            <div class="form-group">
                <button class="boton azul">Registrarse</button>
            </div>
        </form>
    </div>
</div>