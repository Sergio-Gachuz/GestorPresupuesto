<div class="section__login" id="signup">
    <div class="section__imagen">
        <img src="/img/logo.png" alt="Logo" width="300px" height="300px">
    </div>
    <div class="section__form">
        <form action="/signup" method="POST">  
        {{> alerta }} 
        <p>Registrarse</p>
            <div class="form-group">
                <input class="section__form__input" type="text" name="nombre_completo" autocomplete="off" required>
                <label for="nombre_completo" class="section__form__label">
                    <span class="section__form__span">Nombre Completo</span>
                </label>
            </div>
            <div class="form-group">
                <input class="section__form__input" type="text" name="usuario" autocomplete="off" required>
                <label for="usuario" class="section__form__label">
                    <span class="section__form__span">Usuario</span>
                </label>
            </div>
            <div class="form-group">
                <input class="section__form__input" type="password" name="contrasena" autocomplete="off" required>
                <label for="contrasena" class="section__form__label">
                    <span class="section__form__span">Contraseña</span>
                </label>
            </div>
            <div class="form-group">
                <input class="section__form__input" type="text" name="cod__ver" autocomplete="off" required>
                <label for="cod__ver" class="section__form__label" id="cod_ver">
                    <span class="section__form__span">Código de Verificación</span>
                </label>
            </div>
            <div class="form-group">
                <button class="boton azul">Crear cuenta</button>
            </div>
            <p class="form__link"><a href="/signin">Regresar</a></p>
        </form>
    </div>
</div>