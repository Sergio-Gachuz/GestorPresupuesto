<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="titulo">
                <h3>Nueva partida</h3>
            </div>
            <div class="contenido" id="contenido__form">
                <div class="section__form">
                    <form action="/partida/nuevo" method="POST">
                        <p>Llene el siguiente formulario</p>
                        <div class="form-group">
                            <input class="section__form__input" type="number" min="0" name="no_partida" autocomplete="off" required>
                            <label for="no_partida" class="section__form__label">
                                <span class="section__form__span">No. Partida</span>
                            </label>
                        </div>
                        <div class="form-group caja__texto" style="display: block;">
                            <label for="descripcion" class="form-label">
                                <span>Descripci√≥n</span>
                            </label>
                            <textarea class="form-control customize" name="descripcion" id="descripcion" rows="4" cols="50" placeholder="Escribe..." required maxlength="250" autocomplete="off"></textarea>
                        </div>
                        <div class="form-group">
                            <input class="section__form__input input-money" type="text" min="0" name="presupuesto_inicial" autocomplete="off" required>
                            <label for="presupuesto_inicial" class="section__form__label">
                                <span class="section__form__span">Presupuesto Inicial</span>
                            </label>
                        </div>
                        <div class="form-group">
                            <button class="boton azul">Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>