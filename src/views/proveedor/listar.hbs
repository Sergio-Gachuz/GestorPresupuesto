<div class="section">
    <div class="card">
        <h2 class="card-title">Proveedores</h2>
        <a href="/proveedor/nuevo">Agregar nuevo</a>
        <ul>
            {{#each lista_proveedores }}
                <li>
                    {{ nombre }} - {{ rfc }}
                    <br>
                    <a href="/proveedor/editar/{{proveedor_id}}">Editar</a>
                    <a href="/proveedor/borrar/{{proveedor_id}}">Borrar</a>
                </li>
            {{else}}
                <p>No hay proveedores guardados</p>
                <a href="/proveedor/nuevo">Agregar nuevo</a>
            {{/each}}
        </ul>    
    </div>
</div>

