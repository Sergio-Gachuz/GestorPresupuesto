<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="titulo">
                <h3>Nuevo proveedor</h3>
            </div>
            <div class="contenido" id="contenido__form">
                <div class="section__form">
                    <form action="/proveedor/nuevo" method="POST">
                        <p>Llene el siguiente formulario</p>
                        <div class="form-group">
                            <input class="section__form__input" type="text" name="nombre" autocomplete="off" required>
                            <label for="nombre" class="section__form__label">
                                <span class="section__form__span">Nombre</span>
                            </label>
                        </div>
                        <div class="form-group">
                            <input class="section__form__input" type="text" name="razon_social" autocomplete="off" required>
                            <label for="razon_social" class="section__form__label">
                                <span class="section__form__span">Razón Social</span>
                            </label>
                        </div>
                        <div class="form-group">
                            <input class="section__form__input" type="text" name="rfc" autocomplete="off">
                            <label for="rfc" class="section__form__label">
                                <span class="section__form__span">RFC</span>
                            </label>
                        </div>
                        <div class="form-group">
                            <input class="section__form__input" type="text" name="domicilio" autocomplete="off">
                            <label for="domicilio" class="section__form__label">
                                <span class="section__form__span">Domicilio</span>
                            </label>
                        </div>
                        <div class="form-group">
                            <input class="section__form__input" type="number" name="codigo_postal" autocomplete="off">
                            <label for="codigo_postal" class="section__form__label">
                                <span class="section__form__span">Código Postal</span>
                            </label>
                        </div>
                        <div class="form-group">
                            <input class="section__form__input" type="email" name="email" autocomplete="off">
                            <label for="email" class="section__form__label">
                                <span class="section__form__span">Correo Electrónico</span>
                            </label>
                        </div>
                        <div class="form-group">
                            <button class="boton azul">Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>